@model AdvancedTopicsAuthDemo.Models.Taask

<h2>Create Task</h2>

<form asp-action="Create" asp-route-projectId="@ViewData["ProjectId"]" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title">Task Title:</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RequiredHours">Required Hours:</label>
        <input asp-for="RequiredHours" class="form-control" />
        <span asp-validation-for="RequiredHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority" class="control-label">Priority:</label>
        <select asp-for="Priority" class="form-control">
            @foreach (var priorityValue in Enum.GetValues(typeof(AdvancedTopicsAuthDemo.Models.Priority)))
            {
                <option value="@priorityValue">@priorityValue</option>
            }
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <!-- Hidden field for the ProjectId -->
    <input type="hidden" asp-for="ProjectId" />

    <div class="form-group">
        <input type="submit" value="Create Task" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-controller="Project" asp-action="Index">Back to Task List</a>
</div>
